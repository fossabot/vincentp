---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
<channel>
    <title>{{ site.title | xml_escape }} (Just the Lifestream)</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <image>
        <url>{{site.url}}/images/vincentp.jpg</url>
        <title>{{ site.url }}</title>
        <link>{{ site.url }}</link>
    </image>
    {% for post in site.categories.Lifestream limit:10 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description>{{ post.content | xml_escape }}</description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>{{ post.url | prepend: site.url }}</link>
        <!-- PubSubHubbub Discovery -->
        <link rel="hub"  href="https://vincentp.superfeedr.com/" xmlns="http://www.w3.org/2005/Atom" />
        <link rel="self" href="https://vincentp.me/feeds/lifestream.xml" xmlns="http://www.w3.org/2005/Atom" />
        <!-- End Of PubSubHubbub Discovery -->
        <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
