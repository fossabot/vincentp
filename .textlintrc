{
    "rules": {
        "no-todo": true,
        "no-exclamation-question-mark": true,
        "no-empty-section": true,
        "alex": true,
        "common-misspellings": true,
        "date-weekday-mismatch": {
            "lang": "en"
        },
        "en-max-word-count": {
            "max" : 50
        },
        "rousseau": {
            "showLevels": ["suggestion", "warning", "error"],
            "ignoreTypes": ["sentence:uppercase"]
        },
        "no-start-duplicated-conjunction": {
            "interval" : 2
        },
        "max-number-of-lines": {
            "max" : 300
        },
        "max-comma": {
            "max" : 1
        },
        "unexpanded-acronym" : {
            "min_acronym_len" : 3,
            "max_acronym_len" : 5,
            "ignore_acronyms" : ["OSS", "HTML", "SASS", "CSS", "HTTP", "HTTPS", "LESS", "FTP", "URL", "GOV", "GOV.UK"]
        },
        "terminology": {
            "defaultTerms": true,
            "skip": ["Blockquote"],
            "terms": "/Users/vincentpickering/Sites/personal/vincentp/_terms.json"
        }
    }
}
